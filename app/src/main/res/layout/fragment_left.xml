<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragments.LeftFragment"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/fragmentLeftButtonAdd"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_plus_sign"
        android:textSize="20sp"
        android:textAllCaps="false"/>

    <ImageButton
        android:id="@+id/fragmentLeftButtonAndroid"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@mipmap/ic_android_logo"
        android:scaleType="fitCenter"
        android:textSize="20sp"
        android:textAllCaps="false"/>


    <ImageButton
        android:id="@+id/fragmentLeftButtonLaptop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@mipmap/ic_laptop_mac"
        android:scaleType="fitCenter"
        android:textSize="20sp"
        android:textAllCaps="false"/>

</LinearLayout>